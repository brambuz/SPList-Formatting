{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
    "height": 142,
    "width": 194,
    "hideSelection": false,
    "fillHorizontally": true,
    "formatter": {
      "elmType": "div",
      "attributes": {
        "class": "sp-card-container"
      },
      "children": [
        {
          "elmType": "div",
          "attributes": {
            "class": "ms-bgColor-white sp-css-borderColor-neutralLight sp-card-borderHighlight sp-card-subContainer"
          },
          "children": [
            {
              "elmType": "div",
              "attributes": {
                "class": "sp-card-displayColumnContainer "
              },
              "style": {
                "margin": "auto"
              },
              "children": [
                {
                  "elmType": "div",
                  "style": {
                    "text-align": "center"
                  },
                  "children": [
                    {
                      "elmType": "a",
                      "attributes": {
                        "href": "[$Sito]",
                        "target": "_blank"
                      },
                      "style": {
                        "font-size": "40px"
                      },
                      "children": [
                        {
                          "elmType": "img",
                          "attributes": {
                            "class": "sp-card-imagePreview",
                            "src": "=[$Logo.serverUrl] + [$Logo.serverRelativeUrl]",
                            "title": "[$Title]"
                          },
                            "style": {
                              "max-height": "100px",
                              "width": "90%",
                              "padding": "10px"
                            }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }